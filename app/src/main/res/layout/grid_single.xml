    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <TextView
        android:id="@+id/grid_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="12sp">

    </TextView>

    <TextView
        android:id="@+id/grid_text2"
        android:layout_width="match_parent"
